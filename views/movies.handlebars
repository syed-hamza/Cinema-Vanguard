<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
   
      <style>
        body {
            margin: 0;
            padding: 0;
            background-color: black;
            background-image: url("/images/movbg.jpg");
            background-repeat: no-repeat;
            background-size: cover;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: -1;
        }

        .card {
             width: 200px; /* Set the desired width for the cards */
             height: 750px;
            border: none;
            margin: 10px;
            width: 100%; /* Make all cards the same width */
            background-color: rgb(255, 187, 0);
            border: 3px solid black;
        }

        .card-img-top {
            overflow: hidden;
            border: 5px solid black;
        }

        .card-img-top img {
            object-fit: cover;
            width: 100%;
            height: 100%;
        }

        .card-title {
            text-align: center;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            padding: 2px;
            font-size: 1.5rem;
            font-weight: bold;
        }
    </style>
</head>
<body>
<!-- Bootstrap card component -->
<div class="container mt-4">
    <div class="content-wrapper">
        <div class = "content-header">
            <h1>Movies</h1>
        </div>
        <div class = "content container-fluid" id = "movie_list">
                <div class="row" id="movie_card_row">
                    <!-- The cards will be inserted here -->
                </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
<script type="text/javascript" src="/js/movies_list.js"></script>
<div id="name-data" data-name="{{name}}"></div>
</body>
