<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .card {
            border: none; /* Remove the border from the card */
            margin: 5px; /* Adjust the margin to reduce spacing between cards */
            width : 180px;
        }

        .card-img-top {
            width: 180px;
            height: 180px;
            border-radius: 50%;
            overflow: hidden;
        }

        .card-img-top img {
            object-fit: cover;
            width: 100%;
            height: 100%;
        }
        .card-title{
            align-self: center;
        }
    </style>
</head>
<body>
<!-- Bootstrap card component -->
<div class="container mt-4">
<div class="content-wrapper">
    <div class = "content-header">
        <h1>Movies</h1>
    </div>
    <div class = "content container-fluid" id = "movie_list">
            <div class="row" id="movie_card_row">
                <!-- The cards will be inserted here -->
            </div>
    </div>
</div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
<script type="text/javascript" src="./js/actors_list.js"></script>

</body>

